<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Form</title>
    <link rel="stylesheet" href="/styles/styles.css">
    <link rel="stylesheet" href="styles/nav.css">
    <link rel="icon" href="images/phone.jpg">
    <script src="/js/script.js" defer></script>
</head>
<body>
    <main>
        <h1>Contact Form</h1>
        <form id="contactForm" action="/submit" method="post">
            <fieldset id="topField">
                <!-- First Name -->
                <div>
                    <label for="fname">First Name</label>
                    <input type="text" id="fname" name="fname">
                    <span id="err-fname" class="error">First Name is required</span>
                </div>
                <!-- Last Name -->
                <div>
                    <label for="lname">Last Name</label>
                    <input type="text" id="lname" name="lname">
                    <span id="err-lname" class="error">Last Name is required</span>
                </div>
                <!-- Job Title -->
                <div>
                    <label for="job">Job Title</label>
                    <input type="text" id="job" name="job">
                </div>
                <!-- Company -->
                <div>
                    <label for="company">Company</label>
                    <input type="text" id="company" name="company">
                </div>
                <!-- LinkedIn URL -->
                <div>
                    <label for="linkedin">LinkedIn URL</label>
                    <input type="text" id="linkedin" name="linkedin">
                    <span id="err-linkedin" class="error">Invalid LinkedIn address</span>
                </div>
                <!-- Email Address -->
                <div>
                    <label for="email">Email Address</label>
                    <input type="text" id="email" name="email">
                    <span id="err-email" class="error">Email is required</span>
                    <span id="err-email-syntax" class="error">Invalid email address</span>
                </div>
            </fieldset>
            <fieldset id="bottomField">
                <!-- How did we meet? -->
                <div>
                    <label for="meet">How did we meet?</label>
                    <select id="meet" name="meet">
                        <option value="default">Please select...</option>
                        <option value="linkedin">LinkedIn</option>
                        <option value="friend">Friends</option>
                        <option value="family">Family</option>
                        <option value="social">Social Media</option>
                        <option value="other">Other</option>
                    </select>
                    <span id="err-meet" class="error">Please select an option</span>
                </div>
                <!-- Other -->
                <div id="other-text">
                    <label for="other">Other (Please specify)</label>
                    <input type="text" id="other" name="other">
                </div>

                <!-- Message -->
                <div class="message">
                    <label for="message">Message</label>
                    <textarea rows="5" id="message" name="message"></textarea>
                </div>
                </fieldset>
                <fieldset>
                <!-- Add to mailing list -->
                <label for="mailing">
                    <input type="checkbox" id="mailing" name="mailing" value="1">
                    Please add me to your mailing list
                </label>
                <section>
                    <p class="format">Choose an email format:</p>
                    <label for="html">
                        <input type="radio" id="html" name="method" value="html">
                        HTML
                    </label>
                    <label for="text">
                        <input type="radio" id="text" name="method" value="text">
                        Text
                    </label>
                </section>
                <span id="err-format" class="error">Please select an option</span>
            </fieldset>
            <button type="submit">Submit</button>
        </form>
    </main>
    <div id="nav">
        <p class="link"><a href="/">Home</a></p>
        <p class="link"><a href="/contact">Contact</a></p>
        <p class="link"><a href="/admin">Admin</a></p>
        <p class="link"><a href="https://github.com/Kravcant/guestbook-form">GitHub</a></p>
        <p class="link"><a href="https://www.linkedin.com/in/anthony-kravchishin-4a5b7b307/">LinkedIn</a></p>
    </div>
</body>
</html>